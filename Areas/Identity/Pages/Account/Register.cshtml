@page
@model RegisterModel
@{
    ViewData["Title"] = "Rregjistrohu";
}

<h1>@ViewData["Title"]</h1>
<div>
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h4>Krijo llogari te re</h4>
        <hr class="col-md-8" align="left"/>


        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row col-12">
            <div class="form-group col-md-4">
                <label asp-for="Input.FirstName"></label><b style="color:red"> *</b>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group  col-md-4">
                <label asp-for="Input.LastName"></label><b style="color:red"> *</b>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="row col-12">
            <div class="form-group  col-md-4">
                <label asp-for="Input.Country"></label>
                <input asp-for="Input.Country" class="form-control" />
                <span asp-validation-for="Input.Country" class="text-danger"></span>
            </div>
            
            <div class="form-group  col-md-4">
                <label asp-for="Input.City"></label>
                <input asp-for="Input.City" class="form-control" />
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
        </div>
        <div class="row col-12">
            <div class="form-group  col-md-4">
                <label asp-for="Input.Street"></label>
                <input asp-for="Input.Street" class="form-control" />
                <span asp-validation-for="Input.Street" class="text-danger"></span>
            </div>
            
            <div class="form-group  col-md-4">
                <label asp-for="Input.PostalCode"></label>
                <input asp-for="Input.PostalCode" class="form-control" />
                <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
            </div>
        </div>
        <div class="row col-12">
            <div class="form-group  col-md-4">
                <label asp-for="Input.Province"></label>
                <input asp-for="Input.Province" class="form-control" />
                <span asp-validation-for="Input.Province" class="text-danger"></span>
            </div>
            <div class="form-group  col-md-4">
                <label asp-for="Input.Email"></label><b style="color:red"> *</b>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
        </div>
        <div class="row col-12">
            <div class="form-group  col-md-4">
                <label asp-for="Input.Password"></label><b style="color:red"> *</b>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group  col-md-4">
                <label asp-for="Input.ConfirmPassword"></label><b style="color:red"> *</b>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        
        <div class="row col-12">
            <button type="submit" class="btn btn-primary col-md-8">Klikoni ketu pasi ti keni plotesuar kolonat me te dhena tuaja</button>
        </div>
        
    </form>
  
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
