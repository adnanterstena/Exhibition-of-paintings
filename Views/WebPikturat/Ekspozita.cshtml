                                <h4>@Model.ElementAt(i + 3).Karakteristikat</h4>

                                <p class="col-md-11">Lloji: @Model.ElementAt(i + 3).LLojiPiktures</p>
                            </center>
                            <div class="row">
                                <div class="col-md-6"> <center><p>@Model.ElementAt(i + 3).DataPostimit</p></center></div>
                                <div class="row col-md-6">
                                    <center>
                                        <p class="text-break">@Model.ElementAt(i + 3).CmimiPiktures €</p>
                                        <p>@Model.ElementAt(i + 3).Disponueshmeria</p>
                                    </center>
                                </div>
                            </div>
                        </td>
                    }
                </tr>

            }
        </tbody>
    </table>

</div>










